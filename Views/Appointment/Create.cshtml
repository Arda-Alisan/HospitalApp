<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("ClinicId").addEventListener("change", function () {
            var clinicId = this.value;
            console.log("Selected ClinicId:", clinicId);
            var doctorSelect = document.getElementById("DoctorId");

            // Doktor seçim kutusunu temizle
            doctorSelect.innerHTML = '<option value="">Select a doctor</option>';

            if (clinicId) {
                // Sunucuya AJAX isteği gönder
                fetch(`/Appointment/GetDoctorsByClinic?clinicId=${clinicId}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }
                        return response.json();
                    })
                    .then(doctors => {
                        console.log("Doctors:", doctors); // Veriyi kontrol edin
                        doctors.forEach(doctor => {
                            var option = document.createElement("option");
                            option.value = doctor.id;
                            option.textContent = doctor.name;
                            doctorSelect.appendChild(option);
                        });
                    })
                    .catch(error => console.error('Error fetching doctors:', error));
            }
        });
    });
</script>
