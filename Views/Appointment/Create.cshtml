@model Appointment

<h2>Create Appointment</h2>

<form asp-action="AvailableTimes" method="post">
    <div class="form-group">
        <label for="ClinicId">Clinic</label>
        <select id="ClinicId" asp-for="ClinicId" class="form-control">
            <option value="">Select a clinic</option>
            @foreach (var clinic in ViewBag.Clinics)
            {
                <option value="@clinic.ClinicId">@clinic.ClinicName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="DoctorId">Select Doctor:</label>
        <select id="DoctorId" name="DoctorId" class="form-control" onchange="updateDoctorName()">
            <option value="">Select a doctor</option>
            <!-- Doktor bilgileri AJAX ile doldurulacak -->
        </select>
    </div>

    <div class="form-group">
        <label for="Date">Select Date:</label>
        <input type="date" id="Date" name="AppointmentDate" class="form-control" required />
    </div>

    <!-- Hidden input to hold the selected doctor name -->
    <input type="hidden" id="DoctorName" name="DoctorName" />

    <input type="hidden" name="PatientId" value="@ViewBag.user" />

    <button type="submit" class="btn btn-primary">Find Available Times</button>
</form>

@section Scripts {
    <script>
        // Klinik seçimi değiştiğinde doktorları güncelle
        document.getElementById("ClinicId").addEventListener("change", function () {
            var clinicId = this.value;
            var doctorSelect = document.getElementById("DoctorId");

            // Doktor seçim kutusunu temizle
            doctorSelect.innerHTML = '<option value="">Select a doctor</option>';

            if (clinicId) {
                // Sunucuya AJAX isteği gönder
                fetch(`/Appointment/GetDoctorsByClinic?clinicId=${clinicId}`)
                    .then(response => response.json())
                    .then(doctors => {
                        // Doktorları seçime ekle
                        doctors.forEach(doctor => {
                            var option = document.createElement("option");
                            option.value = doctor.Id;
                            option.textContent = doctor.Name;
                            option.dataset.name = doctor.Name;
                            doctorSelect.appendChild(option);
                        });
                    })
                    .catch(error => console.error('Error fetching doctors:', error));
            }
        });

        // Seçilen doktor adını gizli alana yaz
        function updateDoctorName() {
            var doctorSelect = document.getElementById("DoctorId");
            var selectedOption = doctorSelect.options[doctorSelect.selectedIndex];
            var doctorNameInput = document.getElementById("DoctorName");

            doctorNameInput.value = selectedOption ? selectedOption.dataset.name : "";
        }
    </script>
}